  <mj-class name="opportunities-block__img-size" width="20%" />
  <mj-class name="opportunities-block__more-link" align="center" font-size="16px" padding-top="20px" padding-bottom="0px" />

  <mj-class name="footer" padding-top="40px" padding-bottom="200px" />
  <mj-class name="footer__link" align="center" />
  <mj-class name="footer__info" padding-bottom="0px" />
